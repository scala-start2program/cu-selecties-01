<Window x:Class="Scala.SelectiesDemo1.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scala.SelectiesDemo1.Wpf"
        mc:Ignorable="d"
        Title="Guess a number between 1 and 10" Height="350" Width="406" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="txtGuess" HorizontalAlignment="Left" Height="30" Margin="47,39,0,0" Text="" TextAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Top" Width="93"/>
        <Button x:Name="btnGuess" IsDefault="True" Content="Take a guess" HorizontalAlignment="Left" Margin="152,39,0,0" VerticalAlignment="Top" Height="30" Width="113" Click="btnGuess_Click"/>
        <Label x:Name="lblGuesses" Content="" HorizontalAlignment="Left" Height="239" Margin="47,85,0,0" VerticalAlignment="Top" Width="218"/>
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Height="30" Margin="270,39,0,0" VerticalAlignment="Top" Width="98" Click="btnReset_Click"/>
        <Button x:Name="btnCheat" Content="?" HorizontalAlignment="Left" Height="24" Margin="343,10,0,0" VerticalAlignment="Top" Width="25" Click="btnCheat_Click"/>

    </Grid>
</Window>
